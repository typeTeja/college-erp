{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "ESNext",
        "target": "ES2019",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "declaration": true,
        "strict": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}